{
    "git.path": "/usr/bin/git",
    "git-graph.maxDepthOfRepoSearch": 1,
    "python.languageServer": "Pylance",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "editor.suggestSelection": "first",
    "editor.formatOnSave": false,
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "${env:HOME}/.pyenv/versions/neovim/bin/black",
    "python.formatting.blackArgs": [
        "--line-length=80"
    ],
    "python.sortImports.path": "${env:HOME}/.pyenv/versions/neovim/bin/isort",
    "python.sortImports.args": [
        "--src=${workspaceFolder}",
        "--profile=black",
        "--multi-line=3"
    ],
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": false
        }
    },
    "python.jediEnabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": false,
    "python.analysis.typeCheckingMode": "off",
    "vim.sneak": true,
    "vim.sneakReplacesF": true,
    "python.pythonPath": "${env:HOME}/.pyenv/versions/3.8.5/bin/python",
    "editor.tabSize": 8,
    "editor.cursorStyle": "line",
    "editor.insertSpaces": false,
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "editor.wordWrap": "off",
    "window.zoomLevel": -1
}